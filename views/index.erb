<div class='p-8 items-center'>
  <div class="flex flex-col items-center">
    <div>
      <a href='/google_oauth' class=''>
        <button class="border-green-800 border-2 text-grey-darkest font-bold py-2 px-4 rounded inline-flex items-center">
          <span class='text-green-800'>Generate Emails</span>
        </button>
      </a>
    </div>
  </div>
  

  <p class='text-2xl font-bold p-4'>Drafts Created</p>

  <div class="flex flex-row flex-wrap">  
    <% @drafts.each do |draft| %>
      <div class="basis-1/2">
        <p class='text-2xl font-bold p-4'>Email Received</p>
        <p class='p-4'><%= draft.email.body %></p>
      </div>

      <div class="basis-1/2">
        <p class='text-2xl font-bold p-4'>Draft</p>
        <p class='p-4'><%= draft.result %></p>
      </div>
    <% end %>
  </div>
</div>